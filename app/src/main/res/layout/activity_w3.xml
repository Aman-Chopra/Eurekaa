<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:id="@+id/linearLayout">


        <ImageView android:src="@drawable/women"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:id="@+id/selectone"

            android:layout_gravity="center_horizontal"
            android:focusable="true"

            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TextView
            android:id="@+id/usernameTextView"
            android:text="Dr. Lavanya Rai.\nProfessor/Head.\nMD DGO DMLE"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:paddingTop="20dp"
            android:layout_marginRight="40dp"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:textSize="20dip"


            android:layout_weight="0.85"></TextView>




    </LinearLayout>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="#ffffff"
        android:layout_weight="1"
        android:layout_below="@+id/linearLayout">



        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="56dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:background="#ffffff"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Schedule"
                android:textColor="@color/black"
                android:gravity="left"
                android:textSize="20dip"
                android:background="#00000000"
                android:autoText="false" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Wednesday     9:00A.M. - 5:00P.M.\n\n\n"

                android:gravity="left"
                android:textSize="18dip"
                android:background="#00000000"
                android:autoText="false" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Location"
                android:textColor="@color/black"
                android:gravity="left"
                android:textSize="20dip"
                android:background="#00000000"
                android:autoText="false" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Towards Left,\nGate No. 10,\nW and C Block,\nKasturba Hospital.\nFloor - Ground."

                android:gravity="left"
                android:textSize="20dip"
                android:background="#00000000"
                android:autoText="false" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>

