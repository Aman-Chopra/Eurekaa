
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:background="#ffffff">

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="56dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:background="#ffffff">


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="VERVE"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="24dip"
            android:background="#00000000"
            android:autoText="false" />

        <ImageView android:src="@drawable/start"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginBottom="24dp"
            android:id="@+id/selectone"

            android:layout_gravity="center_horizontal"
            android:focusable="true"
             />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Verve is a utility app for Manipal people. It has records of all the doctors of Kasturba Hospital along with the location of their office and schedules.Any person can just check about the concerned department and easily see the details of doctors."
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="18dip"
            android:background="#00000000"
            android:autoText="false" />


    </LinearLayout>
</ScrollView>